<h1 class="main"><%= @game.title %></h1>

<br></br>

<div class="lists">
  <% @users.each do |user| %>
    <% if user.games.include?(@game) %>
      <h2><%= user.username %></h2>
      <ul>
        <% users_game = user.games.find_by_id(@game.id) %>
        <li>On: <%= users_game.platforms[0].name %></li>
        <% if users_game.notes = "" %>
          <li>No notes :(</li>
        <% else %>
          <li><%= users_game.notes %></li>
        <% end %>
      </ul>
    <% end %>
  <% end %>
</div>
