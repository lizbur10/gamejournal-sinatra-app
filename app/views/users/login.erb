<% if flash.has?(:message) %>
  <p><%= flash[:message] %></p>
<% end %>

<h1 class="main">Log In below!</h1>

<br></br>

<form method="POST" action="/login">
  <h2><label for="username">Username: </label><input type="text" name="username" id="username"></h2>
  <h2><label for="password">Password: </label><input type="password" name="password" id="password"></h2>
  <input type="submit" value="Log In"><br>
</form>

<br></br>

<h3 id="signup">If you do not already have account, you can <a href="/signup">sign up here</a>.</h3>
