<h1 class="main"><%= @user.username %>'s Journal</h1>

<h2>Owned games:</h2>

<br></br>

<div class="lists">
  <ul class="inner_lists">
  <% @user.owned_games.each do |game| %>
    <li><b><%= game.title %></b>
      <ul>
        <li>Owned on: <%= game.platform.name %></li>
        <li>Genre: <%= game.genre.name %></li>
        <% if game.notes == "" || game.notes == nil %>
          <li>No notes :(</li>
        <% else %>
          <li><%= game.notes %></li>
        <% end %>
      </ul>
    </li>
  <% end %>
  </ul>
</div>
